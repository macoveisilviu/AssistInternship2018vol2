<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="310dp"
    android:layout_height="174dp"
    android:layout_gravity="center"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="3dp"
    android:background="@drawable/shape_field_grey"
    tools:layout_editor_absoluteX="30dp"
    tools:layout_editor_absoluteY="221dp">

    <ImageView
        android:id="@+id/imgViewCourse"
        android:layout_width="68dp"
        android:layout_height="63dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="27dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/capture2" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgViewCourse">

        <TextView
            android:id="@+id/coursePoints"
            android:layout_width="29dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="9dp"
            android:text="90 "
            android:textAlignment="center"
            android:textColor="@color/blueButton"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/categoryTxt"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"

            android:text="points"
            android:textAlignment="center"
            android:textColor="@color/blueButton"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/coursePoints" />
    </android.support.v7.widget.LinearLayoutCompat>


    <TextView
        android:id="@+id/courseTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="27dp"
        android:textColor="@color/colorButtonDark"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgViewCourse"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/courseDescription"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="7dp"
        android:textColor="@color/colorHint"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/imgViewCourse"
        app:layout_constraintTop_toBottomOf="@+id/courseTitle" />

    <Button
        android:id="@+id/btnDeleteCourse"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/ic_cross"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintTop_toTopOf="parent" />
    <!--  android:visibility="gone"
  -->

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="310dp"
        android:layout_height="4dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:indeterminateTint="@color/buttonXred"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courseDescription"
        app:layout_constraintVertical_bias="0.95" />


</android.support.constraint.ConstraintLayout>