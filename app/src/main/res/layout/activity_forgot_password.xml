<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ForgotPasswordActivity">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="151dp"
        android:layout_height="76dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_logo_teach_me"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/simple_round_corners"/>
    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/white_round_corners"
        android:fontFamily="sans-serif"
        android:hint="email adress"
        android:singleLine="true"
        android:paddingLeft="20dp"
        android:textColor="#FFAEB5BB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/white_round_corners"
        android:hint="new password"
        android:textColor="#FFAEB5BB"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailEditText"
        />
    <EditText
        android:id="@+id/confirmedPasswordEditText"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/white_round_corners"
        android:hint="confirm password"
        android:textColor="#FFAEB5BB"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordEditText"
        />
    <Button
        android:id="@+id/ressetButton"
        android:layout_width="280dp"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/blue_round_corners"
        android:text="RESSET PASSWORD"
        android:textColor="#FFF7F7F7"
        android:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirmedPasswordEditText"/>

</android.support.constraint.ConstraintLayout>