<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <ImageView
        android:id="@+id/registerActivity_logo"
        android:layout_width="151dp"
        android:layout_height="76dp"
        android:layout_marginTop="57dp"
        android:background="@drawable/logo_assist_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText

        android:id="@+id/registerActivity_editFirstName"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:hint="first name"
        android:singleLine="true"
        android:background="@drawable/simple_round_corners"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registerActivity_logo" />

    <EditText
        android:id="@+id/registerActivity_editLastName"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/simple_round_corners"
        android:hint="last name"
        android:singleLine="true"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerActivity_editFirstName"
        android:layout_marginTop="7dp"
        />

    <EditText
        android:id="@+id/registerActivity_editEmailAdress"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/simple_round_corners"
        android:hint="email adress"
        android:singleLine="true"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerActivity_editLastName"
        android:layout_marginTop="7dp"
        />

    <EditText
        android:id="@+id/registerActivity_editPassword"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/simple_round_corners"
        android:hint="********"
        android:inputType="textPassword"
        android:singleLine="true"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerActivity_editEmailAdress"
        android:layout_marginTop="7dp"
        />

    <Button
        android:id="@+id/registerActivity_editButton"
        android:layout_width="280dp"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/blue_round_corners"
        android:text="CREATE ACCOUNT"
        android:textColor="#FFFFFF"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerActivity_editPassword"
        android:layout_marginTop="30dp"

        />

    <CheckBox
        android:id="@+id/EditCheckbox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="#FFFFFF"

        android:onClick="OnCheckBoxClicked"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginLeft="65dp"
        app:layout_constraintTop_toBottomOf="@+id/registerActivity_editButton"
        android:layout_marginTop="5dp"
        android:buttonTint="#FFFFFF"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LineAWord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/registerActivity_editButton"
        android:textColor="#FFFFFF"
         />
</android.support.constraint.ConstraintLayout>



