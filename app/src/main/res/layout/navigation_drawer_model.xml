<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuu"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="@color/colorButtonDark"
    android:clickable="true"

    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <ImageButton
        android:id="@+id/button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_btnx"
        android:clickable="true"
        android:onClick="clickCloseMenuBtn"
        android:paddingBottom="10dp"

        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/ic_x"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageNav"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="90dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/accountNameNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pointsNav"
        app:layout_constraintVertical_bias="0.166"
        app:srcCompat="@mipmap/ic_launcher_round" />


    <LinearLayout
        android:id="@+id/pointsNav"
        android:layout_width="84dp"
        android:layout_height="19dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="530dp"
        android:background="@drawable/shape_button"
        android:gravity="center"
        android:orientation="horizontal"
        android:text="210 "
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:text="210" />

        <TextView
            android:id="@+id/pointstxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="points" />

    </LinearLayout>

    <TextView
        android:id="@+id/accountNameNav"
        android:layout_width="75dp"
        android:layout_height="42dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="Duane Mendoza"
        android:textColor="@color/fullWhite"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageNav"
        app:layout_constraintTop_toBottomOf="@+id/pointsNav" />

    <TextView
        android:id="@+id/coursesNav"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:layout_marginTop="100dp"

        android:clickable="true"


        android:onClick="clickButtonView"
        android:paddingLeft="26dp"
        android:paddingTop="10dp"
        android:text="Courses"
        android:textColor="@color/fullWhite"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/whatsNewNav"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:paddingLeft="26dp"
        android:paddingTop="10dp"
        android:text="What's new"
        android:textColor="@color/fullWhite"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coursesNav" />

    <TextView
        android:id="@+id/aboutNav"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:paddingLeft="26dp"
        android:paddingTop="10dp"
        android:text="About"
        android:textColor="@color/fullWhite"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whatsNewNav" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="17dp"
        android:layout_height="18dp"
        android:layout_marginBottom="96dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="568dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pointsNav"
        app:layout_constraintHorizontal_bias="0.49"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_bell" />

    <RelativeLayout
        android:id="@+id/layoutAccount"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="512dp"
        android:clickable="true"

        android:onClick="clickAccountBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.833"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
