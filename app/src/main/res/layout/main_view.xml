            <Button
                android:id="@+id/chooseBtn"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_marginTop="324dp"
                android:background="@drawable/shape_btn_white"
                android:padding="5dp"
                android:text="Discover more"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/blueButton"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/searchLayout" />

            <ImageButton
                android:id="@+id/courses"
                android:layout_width="145dp"
                android:layout_height="144dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toStartOf="@+id/aboutBTN"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/searchLayout"
                app:srcCompat="@drawable/rectangle1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginTop="30dp"
                android:text="@string/alexa_teach_me_2018_all_rights_reserved"
                android:textColor="@color/colorHint"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chooseBtn" />

            <ImageButton
                android:id="@+id/aboutBTN"
                android:layout_width="145dp"
                android:layout_height="144dp"
                android:layout_marginEnd="52dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.132"
                app:layout_constraintStart_toEndOf="@+id/courses"
                app:layout_constraintTop_toBottomOf="@+id/searchLayout"
                app:srcCompat="@drawable/rectangle3" />

            <ImageButton
                android:id="@+id/imageButton5"
