<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:id="@+id/menu_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="end"
    android:background="#FF06102B">

    <Button
        android:layout_height="37dp"
        android:layout_width="37dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="33dp"
        android:layout_marginStart="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/gray_round_corners"
        android:id="@+id/backButton"
        />

    <TextView
        android:layout_marginTop="130dp"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:text="Courses"
        android:textSize="24sp"
        android:textColor="#FFFFFFFF"
        android:id="@+id/coursesTextView"
        android:layout_marginStart="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="24.5dp"
        android:id="@+id/whatsTextView"
        android:layout_height="28dp"
        android:text="What's new"
        android:textSize="24sp"
        android:textColor="#FFFFFFFF"
        android:layout_marginStart="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coursesTextView"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="24.5dp"
        android:id="@+id/aboutTextView"
        android:layout_height="28dp"
        android:text="About"
        android:textSize="24sp"
        android:textColor="#FFFFFFFF"
        android:layout_marginStart="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/whatsTextView"/>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/bbear"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:layout_height="42dp"
        android:layout_width="75dp"
        android:text="Dwane Mendoza"
        android:id="@+id/text"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginLeft="9dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="21dp"/>
    <ImageView
        android:layout_height="15dp"
        android:layout_width="13.5dp"
        android:src="@drawable/notification_shape"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="80dp"/>
    <TextView
        android:layout_height="14dp"
        android:layout_width="61dp"
        android:layout_marginStart="61dp"
        android:layout_marginBottom="80dp"
        android:text="210 points"
        android:textSize="12sp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/blue_round_corners"/>

</android.support.constraint.ConstraintLayout>
