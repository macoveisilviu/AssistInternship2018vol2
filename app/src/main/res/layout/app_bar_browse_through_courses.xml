<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BrowseThroughCourses">


    <include
        android:id="@+id/topimage"
        layout="@layout/top_bar_layout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_width="0dp"
        android:layout_height="100dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/topimage"
        android:id="@+id/relativelayout"
        android:background="@drawable/background">

        <TextView
            android:id="@+id/text_browse_through_courses"
            android:layout_width="320dp"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="69dp"
            android:textAlignment="center"
            android:text="Browse through all Finances \ncourses for Alexa"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboco_font"
            android:textColor="@android:color/white"
            />

        <TextView
            android:layout_width="185dp"
            android:layout_height="42dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text_browse_through_courses"
            android:layout_marginTop="15dp"
            android:text="Pick the one you like \nand start learning"
            android:textColor="#FFD1D5D8"
            android:textAlignment="center"
            android:fontFamily="@font/roboco_font"
            android:textSize="18sp"
            />



    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_v"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativelayout">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>


    
    
